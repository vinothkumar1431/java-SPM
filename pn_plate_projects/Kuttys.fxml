        <VBox spacing="10" styleClass="side-bar">
            <Label text="LOGO" styleClass="logo"/>
            <Separator/>

            <Button text="Dashboard" styleClass="side-btn"/>
            <Button text="Orders" styleClass="side-btn"/>
            <Button text="Products" styleClass="side-btn"/>
            <Button text="Customers" styleClass="side-btn"/>
