            stylesheets="@dashboard.css">

    <!-- ================= TOP BAR ================= -->
    <top>
        <HBox spacing="15" alignment="CENTER_LEFT" styleClass="top-bar">
            <Label text="DASHBOARD" styleClass="top-title"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Button text="Add"/>
            <Button text="More"/>
