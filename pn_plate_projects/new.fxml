<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="pn_plate_projects.ProductController"
            prefWidth="1000" prefHeight="600">

    <!-- Title -->
    <Label text="Product Management"
           layoutX="20" layoutY="15"
           style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <!-- Buttons -->
    <Button text="Add Product" layoutX="20" layoutY="50"/>
    <Button text="Edit" layoutX="120" layoutY="50"/>
    <Button text="Delete" layoutX="180" layoutY="50"/>
    <Button text="Refresh" layoutX="250" layoutY="50"/>

    <!-- Search -->
    <TextField fx:id="txtSearch"
               promptText="Search Product"
               layoutX="780" layoutY="50"
               prefWidth="200"/>

    <!-- TableView -->
    <TableView fx:id="productTable"
               layoutX="20" layoutY="100"
               prefWidth="960" prefHeight="460">

        <columns>

            <!-- Checkbox -->
            <TableColumn fx:id="colSelect"
                         text="Select"
                         prefWidth="60"/>

            <TableColumn fx:id="colId"
                         text="ID"
                         prefWidth="60"/>

            <TableColumn fx:id="colName"
                         text="Product Name"
                         prefWidth="160"/>

            <TableColumn fx:id="colCategory"
                         text="Category"
                         prefWidth="120"/>

            <TableColumn fx:id="colBrand"
                         text="Brand"
                         prefWidth="120"/>

            <TableColumn fx:id="colPrice"
                         text="Price"
                         prefWidth="90"/>

            <TableColumn fx:id="colGst"
                         text="GST %"
                         prefWidth="70"/>

            <TableColumn fx:id="colQty"
                         text="Stock"
                         prefWidth="70"/>

            <TableColumn fx:id="colStatus"
                         text="Status"
                         prefWidth="90"/>

            <TableColumn fx:id="colExpiry"
                         text="Expiry Date"
                         prefWidth="120"/>

        </columns>
    </TableView>

</AnchorPane>

